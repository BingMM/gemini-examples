&base
ymd = 2013,2,19               ! year, month, day
UTsec0 = 18000.0              ! start time in UT seconds
tdur = 86400.0                  ! duration of simulation in seconds
dtout = 1800.0                  ! how often to do output
activ = 150.0,150.0,50.0      ! f107a,f107,Ap
tcfl = 0.9                    ! target cfl number
Teinf = 1500.0                ! exospheric electron temperature
/

&setup
glat = 75.6975
glon = 265.1678
xdist = 1.5e6             ! eastward distance (meters)
ydist = 1.5e6             ! northward distance (meters)
lxp = 20
lyp = 20
gridflag = 0
Bincl = 90
nmf = 5e11
nme = 2e11
alt_min = 80e3
alt_max = 1000e3
alt_scale = 10e3, 8e3, 500e3, 150e3
/

&flags
potsolve = 0      ! solve electrodynamics:   0 - no; 1 - electrostatic; 2 - inductive
flagperiodic = 0
flagoutput = 1
flagcap = 0
/

&files
file_format = 'h5'
indat_size = '../../simulations/input/RISR_eq/simsize.h5'
indat_grid = '../../simulations/input/RISR_eq/simgrid.h5'
indat_file = '../../simulations/input/RISR_eq/initial_conditions.h5'
/
