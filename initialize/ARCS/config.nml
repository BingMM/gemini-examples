&base
ymd = 2017,3,2                  ! year, month, day
UTsec0 = 27000.0               !UTsec0:  start time in UT seconds
tdur = 300.0                          !tdur:  duration of simulation in seconds
dtout = 5.0                   !dtout: how often to do output
activ = 76.5,79.3,31.5                  !activ:  f107a,f107,Ap
tcfl = 0.9                           !tcfl:  target cfl number
Teinf = 1500.0                        !Teinf:  exospheric electron temperature
/

&flags
potsolve = 1                             !potsolve:  how are we solving electrodynamics?   0 - no; 1 - electrostatic; 2 - inductive
flagperiodic = 0                             !flagperiodic:  periodic in x3 grid?
flagoutput = 2                             !flagoutput
flagcap = 0                             !flagcap:  use inertial capacitance? (0 - no; 1 - yes; 2 - add a nominal magnetospheric capacitance)
flagdneu = 0
flagprecfile = 1
flagE0file = 1
flagglow = 0
/

&files
file_format= 'h5'
indat_size = '~/gemini_sim/arcs/inputs/simsize.h5'
indat_grid = ~/gemini_sim/arcs/inputs/simgrid.dat'
indat_file = '~/gemini_sim/arcs/initial_conditions.h5'
/

&setup
glat = 65.8
glon = 207.7
xdist = 2950e3              ! eastward distance (meters)
ydist = 400e3               ! northward distance (meters)
alt_min = 80e3              ! minimum altitude (meters)
alt_max = 1000e3            ! maximum altitude (meters)
alt_scale = 13.75e3, 20e3, 200e3, 200e3  ! altitude grid scales (meters)
lxp = 256                   ! number of x-cells
lyp = 288                   ! number of y-cells
Bincl = 90                  ! geomagnetic inclination
nmf = 5e11
nme = 2e11
precip_latwidth = 0.25
precip_lonwidth = 0.25
Qprecip = 25
Qprecip_background = 0.05
E0precip = 2e3
Jtarg = 30e-6   ! A/m
Efield_fracwidth = 0.142857
eqdir = ~/gemini_sim/arcs_eq'
/

&precip
dtprec =1.0
prec_dir = '~/gemini_sim/arcs/inputs/prec_inputs/'
/

&efield
dtE0 = 10.0
E0_dir = '~/gemini_sim/arcs/inputs/Efield_inputs/'
/
