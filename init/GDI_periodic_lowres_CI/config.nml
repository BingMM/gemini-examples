&base
ymd = 2013,2,20               ! year, month, day
UTsec0 = 18000.0              ! start time in UT seconds
tdur = 320.0                  ! duration of simulation in seconds
dtout = 10.0                  ! how often to do file output
activ = 150.0,150.0,50.0      ! f107a,f107,Ap
tcfl = 0.9                    ! target cfl number
Teinf = 1500.0                ! exospheric electron temperature
/

&setup
glat = 75.6975
glon = 265.1678
xdist = 600e3             ! eastward distance (meters), including a large low-res buffer for solvers
ydist = 50e3             ! northward distance (meters)
lxp = 216
lyp = 48
Bincl = 90
alt_min = 80e3
alt_max = 975e3
alt_scale = 50e3, 45e3, 400e3, 150e3 ! super coarse along the field line
eqdir = '~/simulations/risr_eq/'
Eyit = -25e-3
Eflagdirich = 0
/

! alt_scale = 30e3, 25e3, 500e3, 150e3    ! parameters setting the nonuniform structure of the grid
! alt_scale = 40e3, 35e3, 450e3, 150e3 ! coarse along field line

&flags
potsolve = 1      ! solve electrodynamics:   0 - no; 1 - electrostatic; 2 - inductive
flagperiodic = 1
flagoutput = 2
flagcap = 1
flagdneu = 0
flagprecfile = 0
flagE0file = 1
flagglow = 0
/

&files
file_format = 'h5'
indat_size = '~/simulations/GDI_periodic_lowres_CI/inputs/simsize.h5'
indat_grid = '~/simulations/GDI_periodic_lowres_CI/inputs/simgrid.h5'
indat_file = '~/simulations/GDI_periodic_lowres_CI/inputs/initial_conditions.h5'
/

&efield
dtE0 = 1.0
E0_dir = '~/simulations/GDI_periodic_lowres_CI/inputs/Efield/'
/
