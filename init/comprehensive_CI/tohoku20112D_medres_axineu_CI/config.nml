! 2D simulation of tohoku earthquake

&base
ymd = 2011,3,11               ! year, month, day
UTsec0 = 35100.0              ! start time in UT seconds
tdur = 1800.0                  ! duration of simulation in seconds
dtout = 125.0                  ! how often to do file output
activ = 104.7,129.5,37.0       ! f107a,f107,Ap
tcfl = 0.9                    ! target cfl number
Teinf = 1500.0                ! exospheric electron temperature
/

&flags
potsolve = 1        ! solve electrodynamics:   0 - no; 1 - electrostatic; 2 - inductive
flagperiodic = 0    ! whether periodic
flagoutput = 2      ! 1 - full output
/

&files
file_format='h5'
indat_size = '../../simulations/tohoku20113D_lowres/inputs/simsize.h5'
indat_grid = '../../simulations/tohoku20113D_lowres/inputs/simgrid.h5'
indat_file = '../../simulations/tohoku20113D_lowres/inputs/initial_conditions.h5'
/

&neutral_perturb
flagdneu = 1
interptype = 1
sourcemlat = 29.0667
sourcemlon = 209.8501
dtneu = 4.0
dzn = 1000.0
drhon = 1000.0
source_dir = '../../simulations/input/tohoku_neutrals/'
/

&milestone
mcadence=10
/
