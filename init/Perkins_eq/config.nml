&base
ymd = 2008,12,21                     !dmy:  day,month,year
UTsec0 = 18000.0                    !UTsec0:  start time in UT seconds
tdur = 86400.0                      !tdur:  duration of simulation in seconds
dtout = 1800.0                      !dtout: how often to do output
activ = 80,80,4             !activ:  f107a,f107,Ap
tcfl = 0.9                          !tcfl:  target cfl number
Teinf = 1500.0                      !Teinf:  exospheric electron temperature
/

&flags
potsolve = 0                             !potsolve:  are we solving potential?
flagperiodic = 0
flagoutput = 1
/

&files
file_format ='h5'
indat_size = '~/simulations/raid/Perkins_eq/inputs/simsize.h5'
indat_grid = '~/simulations/raid/Perkins_eq/inputs/simgrid.h5'
indat_file = '~/simulations/raid/Perkins_eq/inputs/initial_conditions.h5'
/

&efield
dtE0 = 60.0
E0_dir = '~/simulations/raid/Perkins_eq/inputs/fields/'
/
